<main class="login-page">
    <h1><%= title %></h1>

    <!-- Flash Messages -->
    <%- messages() %>

    <% if (errors) { %>
      <ul class="notice">
        <% errors.array().forEach(error => { %>
          <li><%= error.msg %></li>
        <% }) %>
      </ul>
    <% } %>

    <!-- Login Form -->
    <form action="/account/login" method="post" id="loginForm" class="login-form">
        <label for="account_email">Email</label>
        <input type="email" name="account_email" id="email" required value="<%= typeof account_email !== 'undefined' ? account_email : '' %>">

        <div class="password-wrapper">
            <input type="password" id="account_password" name="account_password" required placeholder="Enter your password"
            pattern="^(?=.*\d)(?=.*[a-z])(?=.*[A-Z])(?=.*[^a-zA-Z0-9])(?!.*\s)">
            <span id="togglePassword" class="toggle-password">Show</span>
        </div>

        <button type="submit">Login</button>
    </form>

    <p class="register-link">
        Don't have an account?
        <a href="/account/register">Create one</a>
    </p>
</main>

